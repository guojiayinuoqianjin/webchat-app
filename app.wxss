@import 'style/weui.wxss';

.page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    color: #666;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
} 
/**公共样式**/
.single-item{
  padding: 10px;
  display: flex;
}
.item-image{
  width: 128px;
}
.item-image image{
  width: 100%;
  height: 180px;
}
.item-info{
  padding-left: 10px;
  flex: 1;
}
.item-info view{
  margin-bottom: 10px;
}
.item-info .label{
  margin-right: 5px;
  color: #666;
}
.item-info .rating{
  color: #e09015;
}
.item-title{
 font-size: 18px;
 margin-right: 10px;
}
.item-year{
  font-size: 16px;
  color: #999;
}
.person{
  margin-right: 5px;
}
.load-more-wrap{
  text-align: center;
  padding: 10px 20px 20px 20px;
}
.load-content{
  padding: 5px;
  color: #666;
}
.btn-load-more text{
  display: block;
  padding: 5px;
  border-radius: 3px;
  background: #e6e6e6;
  color: #666;
  text-align: center;
}

.text-left{
  width: 100%;
  text-align: left;
}
.text-center{
  width: 100%;
  text-align: center;
}
.text-content{
  padding: 10rpx;
}
.slide-image{
  width: 100%;
}